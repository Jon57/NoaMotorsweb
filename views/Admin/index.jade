extends ../layout.jade
block contenido
	h1 Panel de Administracion
	table(class="table")
		caption Productos Actuales
		thead
			tr
				th #
				th Nombre
				th Descripcion
				th Precio
				th Imagenes
				th Acciones
		tbody
			each product in products
				tr
					td= product.id
					td= product.title
					td= product.description
					td= product.pricing
					td
						a(href="#{product.imageUrl}" class="btn") Ver Imagen
					td
						a(href="/productos/edit/#{product.id}") Editar
						=" - "
						a(href="/productos/delete/#{product.id}") Eliminar