extends ../layout.jade
block contenido
	h2(class='center-block Orbitron') Productos
	p Las mejores camionetas
	each product in products
		div(class="col-md-4 col-sm-6 col-xs-12 inline-block")
			h3(class="Orbitron")= product.title
			img(src="#{product.image.url}" class="col-xs-8 col-md-9 no-float")
			p(style="margin-top:1em;") 
				small(class="lato small") $ #{product.pricing}
			p(style"margin-top:1em;") #{product.description}	